  <input id="inputchipsId" class="inputer2" type="number" bindinput="handleInput2" placeholder="请输入数字，如1500" />
</view>
<view>
  <image class="sure2" src="{{sure2Src}}" bind:tap="storeInput" mode="widthFix"/>
</view>