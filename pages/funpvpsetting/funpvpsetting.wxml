<!--pages/gamesetting/gamesetting.wxml-->
<view class="bgdcontainer">
  <image class="bgdimage" src="{{bgdimgSrc}}" mode="widthFix"></image>
  <image class="gameset" src="{{gamesetSrc}}" mode="widthFix"/>
</view>
